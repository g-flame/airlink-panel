<%- include('../components/header', { title: 'Login'}) %>

<style>
  /* mobile background visible under the card; removed on lg+ so desktop uses the side image */
  .mobile-bg {
    background-image: url('https://img.freepik.com/free-vector/natural-landscape-wallpaper-concept_23-2148650600.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }

  /* subtle overlay so background isn't too bright behind the card */
  .mobile-bg::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.18);
    z-index: 0;
  }

  @media (min-width: 1024px) {
    .mobile-bg { background-image: none !important; }
    .mobile-bg::before { background: transparent; }
  }
</style>

<div class="min-h-full flex mobile-bg">
  <div class="flex-1 flex flex-col justify-center py-12 px-4 sm:px-6 lg:flex-none lg:px-20 xl:px-24 border-r border-neutral-950/20">
    <div class="mx-auto w-full max-w-sm lg:w-96 relative z-50">
      <!-- BOXED CARD START (solid #141414) -->
      <div class="rounded-2xl shadow-lg p-6 sm:p-8 text-white" style="background-color:#141414;">
        <div>
          <% if (settings.logo) { %>
            <img class="h-12 w-auto rounded-xl" src="<%= settings.logo %>" alt="Logo">
          <% } %>
           <h2 class="<% if (settings.logo) { %>mt-6<% } %> text-3xl font-medium text-white">Sign in to <%= settings.title %></h2>  
          <p class="mt-2 text-sm font-normal text-neutral-300">  
            Please enter your account credentials below. 
          </p>
        </div>

        <div class="mt-8">
          <div class="mt-6">
            <form id="login-form" class="space-y-6" action="/login" method="POST">
              <%- include('../components/csrf') %>

              <!-- Error Messages Section -->
              <% if (req.query.err) { %>
                <div class="bg-red-900/30 border border-red-700/40 rounded-lg p-4 mb-4">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-red-300" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <h3 class="text-sm font-medium text-red-200">
                        <% if (req.query.err === 'missing_credentials') { %>
                          Missing Information
                        <% } else if (req.query.err === 'invalid_credentials') { %>
                          Invalid Credentials
                        <% } else if (req.query.err === 'user_not_found') { %>
                          User Not Found
                        <% } else if (req.query.err === 'incorrect_password') { %>
                          Incorrect Password
                        <% } else if (req.query.err === 'database_error') { %>
                          Server Error
                        <% } else if (req.query.err === 'registration_disabled') { %>
                          Registration Disabled
                        <% } else { %>
                          Login Error
                        <% } %>
                      </h3>
                      <div class="mt-2 text-sm text-red-200">
                        <% if (req.query.err === 'missing_credentials') { %>
                          Please enter both your username/email and password.
                        <% } else if (req.query.err === 'invalid_credentials') { %>
                          The username/email or password you entered is incorrect. Please check your credentials and try again.
                        <% } else if (req.query.err === 'user_not_found') { %>
                          No account found with that username or email address. Please check your input or create a new account.
                        <% } else if (req.query.err === 'incorrect_password') { %>
                          The password you entered is incorrect. Please try again or use the "Forgot Password" option.
                        <% } else if (req.query.err === 'database_error') { %>
                          We're experiencing technical difficulties. Please try again in a few moments.
                        <% } else if (req.query.err === 'registration_disabled') { %>
                          Registration is currently disabled. Please contact an administrator if you need an account.
                        <% } else { %>
                          An unexpected error occurred. Please try again.
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              <% } %>

              <!-- Username/Email -->
              <div>
                <label for="username" class="block text-sm font-medium text-neutral-300"> Username or Email </label>
                <div class="mt-2">
                  <input name="identifier" placeholder="example" id="username" autocomplete="username" required
                    class="appearance-none block w-full px-3 py-2 bg-white text-neutral-900 border border-neutral-300 rounded-xl placeholder-neutral-400 focus:outline-none focus:ring-neutral-500 focus:border-neutral-500 transition sm:text-sm">
                </div>
              </div>

              <!-- Password -->
              <div class="space-y-1">
                <label for="password" class="block text-sm font-medium text-neutral-300"> Password </label>
                <div class="mt-2">
                  <input id="password" name="password" placeholder="********" type="password" autocomplete="current-password" required
                    class="appearance-none block w-full px-3 py-2 bg-white text-neutral-900 border border-neutral-300 rounded-xl placeholder-neutral-400 focus:outline-none focus:ring-neutral-500 focus:border-neutral-500 transition sm:text-sm">
                </div>
              </div>

              <!-- Remember & Forgot -->
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 text-neutral-200 focus:ring-neutral-500 border-neutral-300 bg-white rounded">
                  <label for="remember-me" class="ml-2 block text-sm text-neutral-300"> Remember me </label>
                </div>

                <div class="text-sm">
                  <a class="font-normal text-neutral-300 hover:text-white transition cursor-pointer">Forgot your password?</a>
                </div>
              </div>

              <!-- Submit -->
              <div>
                <button type="submit" class="w-full flex transition justify-center py-2 px-4 border border-transparent rounded-xl shadow-sm text-sm font-medium text-black bg-white hover:bg-neutral-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-neutral-500">Sign in</button>
              </div>

              <!-- Register -->
              <% if (settings.register) { %>
              <div class="mt-6 text-sm text-neutral-300">
                Need an account? <a href="/register" class="font-normal text-neutral-300 hover:text-white transition">Register</a>
              </div>
              <% } %>

            </form>
          </div>
        </div>
      </div>
      <!-- BOXED CARD END -->
    </div>
  </div>

  <!-- desktop side image -->
  <div class="hidden lg:block relative w-0 flex-1">
    <img class="absolute inset-0 h-full w-full object-cover" src="https://i.imgur.com/j9BodUY.jpeg" alt="">
  </div>
</div>

<%- include('../components/footer') %>
